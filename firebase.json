{
  "hosting": {
    "public": "parametric-static",
    "ignore": ["**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      { "source": "**/*.html", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
      { "source": "assets/**",  "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] }
    ]
  }
}
